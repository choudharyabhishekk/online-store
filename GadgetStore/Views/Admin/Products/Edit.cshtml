@model GadgetStore.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h1 class="display-4 text-primary">Edit Product</h1>

    <form asp-action="EditProduct" method="post" class="mt-3">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="mb-3">
            <label for="Name" class="form-label">Product Name</label>
            <input type="text" name="Name" id="Name" class="form-control" value="@Model.Name" required />
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea name="Description" id="Description" class="form-control" rows="3">@Model.Description</textarea>
        </div>
        <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input type="number" name="Price" id="Price" class="form-control" step="0.01" value="@Model.Price"
                required />
        </div>
        <div class="mb-3">
            <label for="CategoryId" class="form-label">Category</label>
            <select name="CategoryId" id="CategoryId" class="form-select" required>
                <option value="">Select a Category</option>
                @foreach (var category in ViewBag.Categories as IEnumerable<GadgetStore.Models.Category>)
                {
                    <option value="@category.Id" selected="@(category.Id == Model.CategoryId ? "selected" : null)">
                        @category.Name
                    </option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="ImageUrl" class="form-label">Image URL</label>
            <input type="text" name="ImageUrl" id="ImageUrl" class="form-control" value="@Model.ImageUrl" />
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/Admin/Products" class="btn btn-secondary">Cancel</a>
    </form>
</div>
