@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">Welcome to the Admin Dashboard</h1>
        <p class="text-muted">Manage your store with ease and efficiency.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Categories</h5>
                    <p class="card-text text-muted">Manage product categories.</p>
                    <a href="/Admin/Categories" class="btn btn-outline-primary">View Categories</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Products</h5>
                    <p class="card-text text-muted">Manage your products.</p>
                    <a href="/Admin/Products" class="btn btn-outline-primary">View Products</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Orders</h5>
                    <p class="card-text text-muted">Manage all the orders.</p>
                    <a href="/Admin/Orders" class="btn btn-outline-primary">View Orders</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Inquiries</h5>
                    <p class="card-text text-muted">View all the inquiries.</p>
                    <a href="/Admin/ContactSubmissions" class="btn btn-outline-primary">View Inquiries</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Customers</h5>
                    <p class="card-text text-muted">Manage all the customers.</p>
                    <a href="/Admin/Customers" class="btn btn-outline-primary">View Customers</a>
                </div>
            </div>
        </div>
    </div>
</div>
