@model IEnumerable<GadgetStore.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

@if (!Model.Any())
{
    <p>No orders found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Total Amount</th>
                <th>Order Date</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.CustomerName</td>
                    <td>@order.Email</td>
                    <td>@order.Phone</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>
                        <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-info">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
